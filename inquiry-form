<form id="inquiry-form">
  <input type="email" name="email" required />
  <select name="inquiry_type">
    <option value="delete_account">アカウント削除</option>
    <option value="question">質問</option>
  </select>
  <textarea name="message" required></textarea>
  <button type="submit">送信</button>
</form>

<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js"></script>
<script>
  const supabase = supabase.createClient('https://xxx.supabase.co', 'your-anon-key');

  document.getElementById('inquiry-form').addEventListener('submit', async (e) => {
    e.preventDefault();

    const form = e.target;
    const email = form.email.value;
    const inquiry_type = form.inquiry_type.value;
    const message = form.message.value;

    const { error } = await supabase.from('web_user_inquiries').insert([
      { email, inquiry_type, message }
    ]);

    if (error) {
      alert("送信に失敗しました: " + error.message);
    } else {
      alert("お問い合わせが送信されました。");
      form.reset();
    }
  });
</script>
